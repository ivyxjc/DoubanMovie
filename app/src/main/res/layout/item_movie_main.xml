<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/size_2dp"
             android:layout_marginTop="@dimen/size_2dp"
             android:background="?android:colorBackground"
             android:gravity="center"
             android:padding="@dimen/size_6dp">

    <ImageView
        android:id="@+id/gallery_item_imageView"
        android:layout_width="108dp"
        android:layout_height="160dp"
        android:contentDescription="@string/movie"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/gallery_item_text"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/alpha_gray_800"
        android:gravity="center"
        android:padding="@dimen/size_2dp"
        android:singleLine="true"
        android:textColor="@color/gray_white_1000"
        android:textSize="@dimen/size_14sp"
        android:text="@string/movie"/>

</FrameLayout>